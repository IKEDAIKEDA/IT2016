<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ikeda.sumo.TorikumiMenuActivity"
    tools:showIn="@layout/activity_torikumi_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mode_label"
        android:background="@drawable/label_torikumi"
        android:text="                                          " />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/btn_hitori"
        android:tag="btn_hitori"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_hitori"
        android:layout_below="@+id/mode_label"
        android:layout_toRightOf="@+id/mode_label" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_online"
        android:tag="btn_online"
        android:layout_below="@+id/btn_hitori"
        android:layout_alignLeft="@+id/btn_hitori"
        android:layout_marginTop="56dp"
        android:background="@drawable/btn_online" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:tag="btn_back"
        android:layout_alignTop="@+id/mode_label"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_back"
        android:layout_above="@+id/btn_hitori" />


</RelativeLayout>
